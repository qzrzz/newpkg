{
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "target": "ES2023",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "allowJs": true
    },
    "include": ["src"]
}
